<?xml version="1.0" encoding="utf-8"?>
<com.android.camera.ui.DropView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
	<LinearLayout android:id="@+id/drop_view"
	    android:layout_width="50dip"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:layout_alignParentRight="true"
	    android:gravity="center" >
	    <ImageView android:id="@+id/flash_view"
	        android:layout_width="wrap_content"
	        android:layout_height="45dip"
	        android:src="@drawable/ic_flash_on_holo_light"/>
	    <ImageView android:id="@+id/photo_view"
	        android:layout_width="wrap_content"
	        android:layout_height="45dip"
	        android:src="@drawable/ic_switch_camera"/>
	    <ImageView android:id="@+id/switch_view"
	        android:layout_width="wrap_content"
	        android:layout_height="45dip"
	        android:src="@drawable/ic_switch_front"/>
	    <ImageView android:id="@+id/indiactor_view"
	        android:layout_width="wrap_content"
	        android:layout_height="45dip"
	        android:src="@drawable/yixi_image_to_hide"
	        android:scaleType="center"/>
	</LinearLayout>
</com.android.camera.ui.DropView>
